root = true

[*]
charset = utf-8
insert_final_newline = true
end_of_line = lf

[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[.eslintrc]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{js,jsx,ts}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.json]
indent_style = space
indent_size = 4

[*.{css,less}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.xml]
indent_style = space
indent_size = 2
